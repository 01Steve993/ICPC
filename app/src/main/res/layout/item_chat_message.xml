<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <!-- Robot (left) -->
    <LinearLayout
        android:id="@+id/left_chat_bubble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="start">

        <ImageView
            android:id="@+id/left_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_back"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/left_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bubble_ai"
            android:padding="10dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- User (right) -->
    <LinearLayout
        android:id="@+id/right_chat_bubble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="end">

        <TextView
            android:id="@+id/right_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bubble_user"
            android:padding="10dp"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/right_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_history"
            android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>
